server {
    listen 8001;
    server_name localhost;
    root site/2/;
    index index.html;
    error_page 404 error_pages/404.html;
}

server {
    listen 8004;
    server_name localhost;
    root site/3/;
    index index.html;
    error_page 404 error_pages/404.html;

    location /site/2.1 {
        index loca.html;
        allow_methods DELETE POST GET;
        autoindex off;
    }

    location /site/2.2 {
        allow_methods DELETE POST GET OPTIONS;
        autoindex off;
        index hello.html;
    }

}

server {
    listen 8000;
    server_name site_perso;
    root site/1/;
    index index.html;
    error_page 404 error_pages/404.html;
}