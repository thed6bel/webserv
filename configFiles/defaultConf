server {
    listen 8001;
    server_name s19site.webserv;
    root /site/1;
    error_page 404 /error_pages/404.html;
    error_page 504 /error_pages/504.html;
    index /index.html;
    upload_files /files;
    client_max_body_size 10000000;

    location /files {
        allow_methods GET OPTIONS POST DELETE;
        autoindex on;
        index /index.html;
    }

    location /redirect {
        index /index.html;
        allow_methods DELETE POST GET;
        autoindex off;
        return /index.html;
    }

    location /dir {
        allow_methods DELETE POST GET;
        autoindex off;
    }

    location / {
        allow_methods DELETE POST GET;
        autoindex off;
    }

    location /contcat {
        index /index.html;
        allow_methods DELETE POST;
        autoindex off;
    }
}

server {
    listen 8002;
    server_name sitetest.be;
    root /site/2;
    error_page 404 /error_pages/404.html;
    index /index.html;
    client_max_body_size 10;
}